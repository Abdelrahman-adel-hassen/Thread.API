{
  "UseInMemoryDatabase": false,
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ThreadDB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },

  "TokenKey": "super secret unguessable key",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Hangfire": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "default-wrapper": {
      "type": "AsyncWrapper",
      "queueLimit": "10000",
      "timeToSleepBetweenBatches": "5000",
      "batchSize": "10000",
      "overflowAction": "Grow"
    },
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/logs/${processname}-${shortdate}.log",
        "layout": "${longdate}|${level}|${threadid}-${message}|${exception:format=tostring}"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate}|${level}|${threadid}-${message}|${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile"
      }
    ]
  }
}